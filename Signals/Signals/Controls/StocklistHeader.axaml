<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Signals.Controls.StocklistHeader">
    
    <Border Classes="heading" >
        <StackPanel>
            <Border Classes="item-border">
                <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *" >
                    <Label Grid.Row="0" Grid.Column="0" Content="Symbol" Width="80" Classes="heading"></Label>
                    <Label Grid.Row="0" Grid.Column="1" Content="Name" Classes="heading"></Label>
                </Grid>
            </Border>
            <Grid RowDefinitions="Auto" ColumnDefinitions="Auto, *, Auto" >
                <Label Grid.Row="0" Grid.Column="0" Content="Quote" Width="80" Classes="heading" ></Label>
                <Label Grid.Row="0" Grid.Column="1" Content="Quote Time" Classes="heading" ></Label>
                <Label Grid.Row="0" Grid.Column="2" Content="% Chg" Classes="heading" ></Label>
            </Grid>
        </StackPanel>
    </Border>

</UserControl>
