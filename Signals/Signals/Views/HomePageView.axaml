<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:Signals.ViewModels"
             x:DataType="vm:HomePageViewModel"
             x:Class="Signals.Views.HomePageView">

	<StackPanel>
		<Label Content="{Binding PageSubtitle}"></Label>

		<Label Content="Application Data Folder"></Label>
		<TextBlock Text="{Binding ApplicationDataFolderName}"/>

		<Label Content="Local Application Data Folder"></Label>
		<TextBlock Text="{Binding ApplicationLocalDataFolderName}"/>

		<Label Content="Common Application Data Folder"></Label>
		<TextBlock Text="{Binding ApplicationCommonDataFolderName}"/>
	</StackPanel>
	
</UserControl>
